@model CreateWatchedForumAccount

<h4>Forumaccountbeobachtung verändern</h4>
<hr />

<form asp-action="Edit" asp-route-id="@Model.ForumUserId">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="ForumUserId" class="control-label"></label>
		<input asp-for="ForumUserId" class="form-control" readonly/>
		<span asp-validation-for="ForumUserId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="WatchAction" class="control-label"></label>
		<select asp-for="WatchAction" asp-items="@Html.GetEnumSelectList<Mitternacht.Database.Models.WatchAction>()" class="form-select"></select>
		<span asp-validation-for="WatchAction" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Save" class="btn btn-primary" />
	</div>
</form>